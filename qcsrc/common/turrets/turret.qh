const int TFL_TARGETSELECT_MISSILESONLY   = BIT(13); ///< only attack missiles
const int TFL_TARGETSELECT_VEHICLES       = BIT(14); ///< target manned vehicles

// aim flags
.int aim_flags;
const int TFL_AIM_NO                  = BIT(0); ///< no aiming
const int TFL_AIM_SPLASH              = BIT(1); ///< aim for ground around the target's feet
const int TFL_AIM_LEAD                = BIT(2); ///< try to predict target movement
