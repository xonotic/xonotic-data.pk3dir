const int TFL_FIRECHECK_AIMDIST     = BIT(5);  ///< consider distance impactpoint<->aimspot
const int TFL_FIRECHECK_REALDIST    = BIT(6);  ///< consider enemy origin<->impactpoint
const int TFL_FIRECHECK_ANGLEDIST   = BIT(7);  ///< consider angular diff head<->aimspot
const int TFL_FIRECHECK_TEAMCHECK   = BIT(8);  ///< don't attack teammates
const int TFL_FIRECHECK_AFF         = BIT(9);  ///< try to avoid any friendly fire
const int TFL_FIRECHECK_AMMO_OWN    = BIT(10); ///< own ammo needs to be larger than damage dealt
const int TFL_FIRECHECK_AMMO_OTHER  = BIT(11); ///< target's ammo needs to be less than max
const int TFL_FIRECHECK_REFIRE      = BIT(12); ///< check single attack finished delays
const int TFL_FIRECHECK_NO          = BIT(14); ///< no prefire checks

// attack flags
.int shoot_flags;
const int TFL_SHOOT_NO           = BIT(6); ///< no attacking
const int TFL_SHOOT_VOLLY        = BIT(1); ///< fire in vollies
