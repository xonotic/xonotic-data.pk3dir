REGISTER_MUTATOR(ctf, false)
{
	MUTATOR_STATIC();
	MUTATOR_ONADD
	{
		GameRules_teams(true);
		GameRules_limit_score(autocvar_capturelimit_override);
		GameRules_limit_lead(autocvar_captureleadlimit_override);

		ctf_Initialize();
	}
	return 0;
}

