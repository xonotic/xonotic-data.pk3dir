}

ERASEABLE
void ONREMOVE(entity this)
{
	if (this.il_lists) {
		for (int i = 0; i < IL_MAX; ++i) {
			IntrusiveList list = il_links[i];
			if (this.il_lists & list.il_listmask && IL_CONTAINS(list, this)) {
				IL_REMOVE(list, this);
			}
		}
	}
}
