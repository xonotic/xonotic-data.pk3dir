#define count_years(time) \
	count_fill(time, \
	_("CI_ZER^%d years"), /* zeroth */ \
	_("CI_FIR^%d year"),  /* first */ \
	_("CI_SEC^%d years"), /* year */ \
	_("CI_THI^%d years"), /* third */ \
